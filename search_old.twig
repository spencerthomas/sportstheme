{{ set(this, 'title', 'Search - ' ~ search) }}

{{this.registerJs("SearchController.listing();")}}

{% set limit = 20 %}
{% set articles = _Search.searchArticles({'limit': limit, 'offset': 0, 'search': search}) %}


    <!--placeholder temp -->
    <section class="featured-carousel">
        <!-- Swiper -->
        <div class="swiper-container">
            <div class="swiper-wrapper">
                {% for i in 0..2 %}
                    {% if articles[i] %}                                                                
                        {{this.render('partials/_single-article.twig', {article: articles[i], position: 'swiper-wrapper', containerClass: 'swiper-slide', swap: 'false'}) | raw}}
                    {% endif %}
                {% endfor %}
            </div>
            <!-- Add Pagination -->
            <div class="container">

                <div class="custom-pagination">
                    <h2 class="top-stories">TOP RESULTS</h2>

                    {% if articles[0] %}
                        {% set articleImg = articles[0].articleId > 0 ? _Media.getMediaUrl(articles[0].featuredMedia,50, 50, {'crop': 'fill', 'gravity': 'faces'} ) : articles[0].social.media['path'] %}
                        {% set articleText = articles[0].articleId > 0 ? Helper.htmlToText(articles[0].title, -1) | raw | escape('html') : Helper.htmlToText(articles[0].social.content, -1) | raw | escape('html') %}

                        <div class="slide-1 pagination-item swap active" 
                             data-proxyfor="swiper-wrapper" 
                             data-position="1" 
                             data-slide="0"
                             data-id="{{ article.articleId > 0 ? article.articleId : article.socialId }}" 
                             data-social="{{ article.socialId > 0 ? '1' : '0' }}"
                             data-article-image="{{ articleImg }}" 
                             data-article-text="{{ articleText }}">

                            <span class="slide-no">01</span>
                            <time datetime="{{ articles[0].metaPublishDate }}">{{_AppHelper.getDateTimeBasedOnTimezone(articles[0].publishDate, 'd M Y')}}</time>
                            
                            {% if articles[0].articleId > 0 %}
                                <h2>{{ articles[0].title }}</h2>
                            {% else %}
                                <h2>{{ articles[0].social.content }}</h2>
                            {% endif %}

                        </div>
                    {% endif %}
    
                    {% if articles[1] %}
                            
                        {% set articleImg = articles[1].articleId > 0 ? _Media.getMediaUrl(articles[1].featuredMedia,50, 50, {'crop': 'fill', 'gravity': 'faces'} ) : articles[1].social.media['path'] %}
                        {% set articleText = articles[1].articleId > 0 ? Helper.htmlToText(articles[1].title, -1) | raw | escape('html') : Helper.htmlToText(articles[1].social.content, -1) | raw | escape('html') %}
                        <div class="slide-1 pagination-item swap" 
                             data-proxyfor="swiper-wrapper" 
                             data-position="2" 
                             data-slide="1"
                             data-id="{{ article.articleId > 0 ? article.articleId : article.socialId }}" 
                             data-social="{{ article.socialId > 0 ? '1' : '0' }}"
                             data-article-image="{{ articleImg }}" 
                             data-article-text="{{articleText}}">
                            <span class="slide-no">02</span>
                            <time datetime="{{ articles[1].metaPublishDate }}">{{_AppHelper.getDateTimeBasedOnTimezone(articles[1].publishDate, 'd M Y')}}</time>
                            {% if articles[1].articleId > 0 %}
                                <h2>{{ articles[1].title }}</h2>
                            {% else %}
                                <h2>{{ articles[1].social.content }}</h2>
                            {% endif %}

                        </div>
                    {% endif %}

                    {% if articles[2] %}
                        {% set articleImg = articles[2].articleId > 0 ? _Media.getMediaUrl(articles[2].featuredMedia,50, 50, {'crop': 'fill', 'gravity': 'faces'} ) : articles[2].social.media['path'] %}
                        {% set articleText = articles[2].articleId > 0 ? Helper.htmlToText(articles[2].title, -1) | raw | escape('html') : Helper.htmlToText(articles[2].social.content, -1) | raw | escape('html') %}
                        <div class="slide-1 pagination-item swap" 
                             data-proxyfor="swiper-wrapper" 
                             data-position="3" 
                             data-slide="2"
                             data-id="{{ article.articleId > 0 ? article.articleId : article.socialId }}" 
                             data-social="{{ article.socialId > 0 ? '1' : '0' }}"
                             data-article-image="{{ articleImg }}" 
                             data-article-text="{{articleText}}">
                            <span class="slide-no">03</span>
                            <time datetime="{{ articles[2].metaPublishDate }}">{{_AppHelper.getDateTimeBasedOnTimezone(articles[2].publishDate, 'd M Y')}}</time>
                            {% if articles[2].articleId > 0 %}
                                <h2>{{ articles[2].title }}</h2>
                            {% else %}
                                <h2>{{ articles[2].social.content }}</h2>
                            {% endif %}

                        </div>
                    {% endif %}
                </div><!--custom-pagination-->
            </div><!--container-->

            <!-- Add Pagination -->
            <div class="swiper-pagination swiper-pagination-white"></div>

        </div>
    </section><!--featured-carousel-->

    <section class="content-block container">
        <div class="row">

            <div class="col-md-9 col-sm-12">
                <div class="row">
                    {% if articles[3] %}
                        {{this.render('partials/_single-article.twig', {article: articles[3], 'position': (4), containerClass: 'col-sm-8 card-md'}) | raw}}
                    {% endif %}
                    {% if articles[4] %}
                        {{this.render('partials/_single-article.twig', {article: articles[4], 'position': (5), containerClass: 'col-sm-4 card-sm'}) | raw}}
                    {% endif %}
                    {% if articles[5] %}
                        {{this.render('partials/_single-article.twig', {article: articles[5], 'position': (6), containerClass: 'col-sm-4 card-sm'}) | raw}}
                    {% endif %}
                    {% if articles[6] %}
                        {{this.render('partials/_single-article.twig', {article: articles[6], 'position': (7), containerClass: 'col-sm-8 card-md'}) | raw}}
                    {% endif %}
                </div><!--row-->
            </div>

        </div>
    </section>


    <section class="highlight content-block">
        {% if articles[7] %}
            {{this.render('partials/_single-article.twig', {article: articles[7], 'position': (8), containerClass: 'card-lg'}) | raw}}
        {% endif %}
    </section><!--highlight-->

    <section class="content-block container">
        <div class="row">

            <div class="col-md-9 col-sm-12">
                <div class="row">

                    {% if articles[8] %}
                        {{this.render('partials/_single-article.twig', {article: articles[8], 'position': (9), containerClass: 'col-sm-4 card-sm'}) | raw}}
                    {% endif %}
                    {% if articles[9] %}
                        {{this.render('partials/_single-article.twig', {article: articles[9], 'position': (10), containerClass: 'col-sm-8 card-md'}) | raw}}
                    {% endif %}
                    {% if articles[10] %}
                        {{this.render('partials/_single-article.twig', {article: articles[10], 'position': (11), containerClass: 'col-sm-4 card-sm'}) | raw}}
                    {% endif %}
                    {% if articles[11] %}
                        {{this.render('partials/_single-article.twig', {article: articles[11], 'position': (12), containerClass: 'col-sm-4 card-sm'}) | raw}}
                    {% endif %}
                    {% if articles[12] %}
                        {{this.render('partials/_single-article.twig', {article: articles[12], 'position': (13), containerClass: 'col-sm-4 card-sm'}) | raw}}
                    {% endif %}

                </div><!--row-->
            </div>
            

        </div>
    </section>

    <section class="content-block container">
        <div class="row section__content">
            <div class="ajaxArticles col-sm-9 col-sm-offset-3" data-existing-nonpinned-count="{{articlesArr.existingNonPinnedCount}}">
                
            </div>
            <a class="loadMoreArticles col-sm-9 col-sm-offset-3" href="#">Load more <i class="fa fa-refresh"></i></a>
        </div>

        {% set noDataCls = 'hide' %}
        {% if articles|length == 0 %}
            {% set noDataCls = '' %}
         {% endif %}
        <div class="row text-center has-margin-bottom-20 has-margin-top-20 {{noDataCls}} NoArticlesMsg">
            <p class="no-data text-center">No articles found.</p>  
        </div>

        
    </section>

