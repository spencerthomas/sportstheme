                    {% if sections['Breaking News'].feed.articles|length > 0 %}

                    <section class="aap-news">

                        <a href ="{{ sections['Breaking News'].link }}"><h2>AAP<br />BREAKING<br />NEWS</h2></a>
                        {% for i in 0..4 %}
                            {% if sections['Breaking News'].feed.articles[i] %}
                                {{this.render('partials/_sidebar-article.twig', {article: sections['Breaking News'].feed.articles[i]}) | raw}}
                            {% endif %}
